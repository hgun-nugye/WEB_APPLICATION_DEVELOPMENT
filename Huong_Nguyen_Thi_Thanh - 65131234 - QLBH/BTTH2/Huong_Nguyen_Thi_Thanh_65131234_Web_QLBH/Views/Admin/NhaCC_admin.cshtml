@model IEnumerable<Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.NhaCC>

@{
    ViewBag.Title = "Quản lý Nhà Cung Cấp";
}

<h2 class="mb-3 text-primary">
    <i class="fa-solid fa-truck"></i> Danh sách Nhà Cung Cấp
</h2>

<p>
    <a href="@Url.Action("Create", "Admin")" class="btn btn-success">
        <i class="fa-solid fa-circle-plus"></i> Thêm Nhà Cung Cấp
    </a>
</p>

<table class="table table-bordered table-hover align-middle text-center shadow-sm">
    <thead class="table-primary">
        <tr>
            <th><i class="fa-solid fa-hashtag"></i> Mã NCC</th>
            <th><i class="fa-solid fa-id-badge"></i> Tên NCC</th>
            <th><i class="fa-solid fa-phone"></i> Điện thoại</th>
            <th><i class="fa-solid fa-envelope"></i> Email</th>
            <th><i class="fa-solid fa-location-dot"></i> Địa chỉ</th>
            <th><i class="fa-solid fa-gear"></i> Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNCC</td>
                <td>@item.TenNCC</td>
                <td>@item.DienThoaiNCC</td>
                <td>@item.EmailNCC</td>
                <td>@item.DiaChiNCC</td>
                <td class="flex justify-content-between">
                    <a class="btn btn-info btn-sm text-white" href="@Url.Action("Details", "Admin", new { id = item.MaNCC })">
                        <i class="fa-solid fa-eye"></i> Chi tiết
                    </a>
                    <a class="btn btn-warning btn-sm text-white" href="@Url.Action("Edit", "Admin", new { id = item.MaNCC })">
                        <i class="fa-solid fa-pen-to-square"></i> Sửa
                    </a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Admin", new { id = item.MaNCC })"
                       onclick="return confirm('Bạn có chắc muốn xóa không?');">
                        <i class="fa-solid fa-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    h2 i {
        margin-right: 8px;
    }

    .btn i {
        margin-right: 5px;
    }

    .table th {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>
