@model IEnumerable<Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.DonBanHang>

@{
    ViewBag.Title = "Quản lý Đơn bán hàng";
}

<div class="container">
    <h2 class="mb-3 text-primary">
        <i class="fa-solid fa-file-invoice-dollar"></i> Danh sách Đơn bán hàng
    </h2>

    <p>
        <a href="@Url.Action("Create", "DonBanHang")" class="btn btn-success">
            <i class="fa-solid fa-circle-plus"></i> Thêm Đơn bán hàng
        </a>
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-triangle-exclamation"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <table class="table table-bordered table-hover align-middle text-center shadow-sm">
        <thead class="table-primary">
            <tr>
                <th><i class="fa-solid fa-hashtag"></i> Mã Đơn</th>
                <th><i class="fa-solid fa-calendar-days"></i> Ngày bán hàng</th>
                <th><i class="fa-solid fa-user"></i> Mã khách hàng</th>
                <th><i class="fa-solid fa-user-tag"></i> Tên khách hàng</th>
                <th><i class="fa-solid fa-gear"></i> Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaDBH</td>
                        <td>@item.NgayBH.ToString("dd/MM/yyyy")</td>
                        <td>@item.MaKH</td>
                        <td>@item.TenKH</td>
                        <td>
                            <a class="btn btn-info btn-sm text-white" href="@Url.Action("Details", "DonBanHang", new { id = item.MaDBH })">
                                <i class="fa-solid fa-eye"></i> Chi tiết
                            </a>
                            <a class="btn btn-warning btn-sm text-white" href="@Url.Action("Edit", "DonBanHang", new { id = item.MaDBH })">
                                <i class="fa-solid fa-pen-to-square"></i> Sửa
                            </a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "DonBanHang", new { id = item.MaDBH })">
                                <i class="fa-solid fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-muted fst-italic">Không có đơn bán hàng nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
