@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.DonBanHang

@{
    ViewBag.Title = "Sửa Đơn bán hàng";
}

<div class="container border p-4 rounded shadow-sm bg-light">

    <h2 class="mb-3 text-warning">
        <i class="fa-solid fa-pen-to-square"></i> Sửa Đơn bán hàng
    </h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="MaDBH" />

        <div class="mb-3">
            <label asp-for="NgayBH" class="form-label"></label>
            <input asp-for="NgayBH" class="form-control" type="date" />
            <span asp-validation-for="NgayBH" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MaKH" class="form-label"></label>
            <select asp-for="MaKH" asp-items="ViewBag.MaKH" class="form-select"></select>
            <span asp-validation-for="MaKH" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning text-white"><i class="fa-solid fa-save"></i> Lưu thay đổi</button>
        <a asp-action="DonBanHang_Admin" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
    </form>
</div>
