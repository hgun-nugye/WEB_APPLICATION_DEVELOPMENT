@model List<Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.DonBanHangDetail>

@{
    ViewBag.Title = "Chi tiết Đơn bán hàng";

    // Lấy dòng đầu tiên để hiển thị thông tin chung
    var don = Model.FirstOrDefault();
}

<div class=" container">
    <h2 class="mb-3 text-info">
        <i class="fa-solid fa-eye"></i> Chi tiết Đơn bán hàng - Đơn @don?.MaDBH
    </h2>

    @if (don != null)
    {
        <div class="container">
            <!-- Thông tin chung của đơn -->
            <div class="card shadow-sm p-4 mb-4">
                <dl class="row">
                    <dt class="col-sm-3">Ngày bán hàng:</dt>
                    <dd class="col-sm-9">@don.NgayBH.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-3">Khách hàng:</dt>
                    <dd class="col-sm-9">@don.TenKH</dd>
                </dl>
            </div>

            <h4 class="text-success mt-4">
                <i class="fa-solid fa-boxes-stacked"></i> Danh sách sản phẩm bán
            </h4>

            <table class="table table-bordered table-striped mt-2">
                <thead class="table-light">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th class="text-center">Số lượng bán</th>
                        <th class="text-end">Đơn giá bán</th>
                        <th class="text-end">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ct in Model)
                    {
                        <tr>
                            <td>@ct.TenSP</td>
                            <td class="text-center">@ct.SLB</td>
                            <td class="text-end">@ct.DGB?.ToString("N0") ₫</td>
                            <td class="text-end">@(((ct.SLB ?? 0) * (ct.DGB ?? 0)).ToString("N0")) ₫</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-secondary fw-bold">
                        <td colspan="3" class="text-end">Tổng cộng:</td>
                        <td class="text-end">
                            @Model.Sum(x => (x.SLB ?? 0) * (x.DGB ?? 0)).ToString("N0") ₫
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Không tìm thấy đơn bán hàng cần xem chi tiết.
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("DonBanHang_Admin", "DonBanHang")" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
        @if (don != null)
        {
            <a href="@Url.Action("Edit", "DonBanHang", new { id = don.MaDBH })" class="btn btn-warning text-white">
                <i class="fa-solid fa-pen-to-square"></i> Sửa
            </a>
        }
    </div>

</div>