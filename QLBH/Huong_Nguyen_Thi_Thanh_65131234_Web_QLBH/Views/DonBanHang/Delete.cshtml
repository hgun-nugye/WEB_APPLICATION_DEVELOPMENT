@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.DonBanHang

@{
    ViewBag.Title = "Xóa Đơn bán hàng";
}

<div class="container border p-4 rounded shadow-sm bg-light">

    <h2 class="mb-3 text-danger">
        <i class="fa-solid fa-trash"></i> Xóa Đơn bán hàng
    </h2>

    <div class="alert alert-warning">
        <i class="fa-solid fa-triangle-exclamation"></i>
        Bạn có chắc muốn xóa đơn bán hàng <strong>@Model.MaDBH</strong> không?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Ngày bán hàng</dt>
        <dd class="col-sm-9">@Model.NgayBH.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Khách hàng</dt>
        <dd class="col-sm-9">@Model.TenKH</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaDBH" />
        <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Xóa</button>
        <a asp-action="DonBanHang_Admin" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
    </form>
</div>
