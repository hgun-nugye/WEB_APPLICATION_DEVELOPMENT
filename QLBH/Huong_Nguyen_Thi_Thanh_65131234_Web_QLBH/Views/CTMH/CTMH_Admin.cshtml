@model IEnumerable<Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.CTMH>
@{
    ViewBag.Title = "Chi tiết mua hàng";
}
<div class="container">
<h2 class="mb-3 text-primary">
    <i class="fa-solid fa-list"></i> Chi tiết mua hàng
</h2>

<table class="table table-bordered table-hover align-middle text-center shadow-sm">
    <thead class="table-light">
        <tr>
                <th><i class="fa-solid fa-hashtag"></i> Mã Đơn mua hàng</th>
                        <th><i class="fa-solid fa-hashtag"></i> Mã SP</th>
            <th><i class="fa-solid fa-box"></i> Tên SP</th>
            <th><i class="fa-solid fa-sort-numeric-up"></i> Số lượng</th>
            <th><i class="fa-solid fa-money-bill"></i> Đơn giá</th>
            <th><i class="fa-solid fa-gear"></i> Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                        <td>@item.MaDMH</td>
                        <td>@item.MaSP</td>
                    <td>@item.TenSP</td>
                    <td>@item.SLM</td>
                    <td>@item.DGM.ToString("N")</td>
                    <td class="d-flex justify-content-center gap-1">
                        <a asp-action="Details" asp-route-maDMH="@item.MaDMH" asp-route-maSP="@item.MaSP" class="btn btn-info btn-sm text-white">
                            <i class="fa-solid fa-eye"></i> Xem
                        </a>
                        <a asp-action="Edit" asp-route-maDMH="@item.MaDMH" asp-route-maSP="@item.MaSP" class="btn btn-warning btn-sm text-white">
                            <i class="fa-solid fa-pen-to-square"></i> Sửa
                        </a>
                        <a asp-action="Delete" asp-route-maDMH="@item.MaDMH" asp-route-maSP="@item.MaSP" class="btn btn-danger btn-sm">
                            <i class="fa-solid fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-muted fst-italic">Chưa có chi tiết sản phẩm nào.</td>
            </tr>
        }
    </tbody>
</table>
</div>

<style>
    h2 i {
        margin-right: 8px;
    }

    .btn i {
        margin-right: 5px;
    }

    .table th {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }

    .alert {
        margin-top: 10px;
    }
</style>
