@model IEnumerable<Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.DonMuaHang>

@{
    ViewBag.Title = "Quản lý Đơn mua hàng";
}
<div class="container">
<h2 class="mb-3 text-primary">
    <i class="fa-solid fa-file-invoice-dollar"></i> Danh sách Đơn mua hàng
</h2>

<p>
    <a href="@Url.Action("Create", "DonMuaHang")" class="btn btn-success">
        <i class="fa-solid fa-circle-plus"></i> Thêm Đơn mua hàng
    </a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-triangle-exclamation"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-bordered table-hover align-middle text-center shadow-sm">
    <thead class="table-primary">
        <tr>
            <th><i class="fa-solid fa-hashtag"></i> Mã Đơn</th>
            <th><i class="fa-solid fa-calendar-days"></i> Ngày mua hàng</th>
            <th><i class="fa-solid fa-building"></i> Mã Nhà cung cấp</th>
            <th><i class="fa-solid fa-building"></i> Nhà cung cấp</th>
            <th><i class="fa-solid fa-gear"></i> Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaDMH</td>
                    <td>@item.NgayMH.ToString("dd/MM/yyyy")</td>
                    <td>@item.MaNCC</td>
                    <td>@item.TenNCC</td>
                    <td class="justify-content-between">
                        <a class="btn btn-info btn-sm text-white" href="@Url.Action("Details", "DonMuaHang", new { id = item.MaDMH })">
                            <i class="fa-solid fa-eye"></i> Chi tiết
                        </a>
                        <a class="btn btn-warning btn-sm text-white" href="@Url.Action("Edit", "DonMuaHang", new { id = item.MaDMH })">
                            <i class="fa-solid fa-pen-to-square"></i> Sửa
                        </a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "DonMuaHang", new { id = item.MaDMH })">
                            <i class="fa-solid fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-muted fst-italic">Không có đơn mua hàng nào.</td>
            </tr>
        }
    </tbody>
</table>
</div>

<style>
    h2 i {
        margin-right: 8px;
    }

    .btn i {
        margin-right: 5px;
    }

    .table th {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }

    .alert {
        margin-top: 10px;
    }
</style>
