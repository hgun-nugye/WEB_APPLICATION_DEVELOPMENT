@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.DonMuaHang

@{
    ViewBag.Title = "Xóa Đơn mua hàng";
}

<div class="container">
    <h2 class="mb-3 text-danger">
        <i class="fa-solid fa-trash"></i> Xóa Đơn mua hàng
    </h2>

    <div class="alert alert-warning">
        <i class="fa-solid fa-triangle-exclamation"></i>
        Bạn có chắc chắn muốn xóa đơn mua hàng <strong>@Model.MaDMH</strong> không?
    </div>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3">Mã đơn mua hàng:</dt>
            <dd class="col-sm-9">@Model.MaDMH</dd>

            <dt class="col-sm-3">Ngày mua hàng:</dt>
            <dd class="col-sm-9">@Model.NgayMH.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Nhà cung cấp:</dt>
            <dd class="col-sm-9">@Model.TenNCC</dd>
        </dl>

        <form id="deleteForm" asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="MaDMH" />
            <a href="@Url.Action("DonMuaHang_Admin", "DonMuaHang")" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Hủy
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-trash"></i> Xóa
            </button>
        </form>

    </div>
</div>

 @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function confirmDelete() {
                Swal.fire({
                    title: 'Xác nhận xóa?',
                    text: 'Bạn có chắc chắn muốn xóa Đơn mua hàng này?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy',
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6'
                }).then((result) => {
                    if (result.isConfirmed) {
                        document.getElementById('deleteForm').submit();
                    }
                });
            }
        </script>
        }

       
       
