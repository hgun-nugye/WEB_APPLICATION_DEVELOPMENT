@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.GianHang
@{
    ViewBag.Title = "Thêm Gian hàng";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<h2 class="text-success mb-3">
    <i class="fa-solid fa-circle-plus"></i> Thêm Gian hàng
</h2>

<form asp-action="Create" method="post" class="border p-4 rounded shadow-sm bg-light">
    
       <div class="form-group mb-3">
        <label><i class="fa-solid fa-phone"></i> Tên Gian hàng</label>
        <input asp-for="TenGH" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-envelope"></i> Mô tả</label>
        <input asp-for="MoTaGH" class="form-control" />
    </div>
  
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-location-dot"></i> Điện thoại</label>
        <input asp-for="DienThoaiGH" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-location-dot"></i>Email</label>
        <input asp-for="EmailGH" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-id-badge"></i>Địa chỉ</label>
        <input asp-for="DiaChiGH" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">
        <i class="fa-solid fa-save"></i> Lưu
    </button>
    <a asp-action="GianHang_Admin" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Quay lại
    </a>
</form>
