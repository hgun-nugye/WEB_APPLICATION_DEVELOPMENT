@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.GianHang
@{
    ViewBag.Title = "Chi tiết Gian hàng";
}

<div class="container">
    <h2 class="text-info mb-3">
        <i class="fa-solid fa-eye"></i> Chi tiết Gian hàng
    </h2>

    <div class="card shadow-sm border-info">
        <div class="card-body">
            <p><strong><i class="fa-solid fa-hashtag"></i> Mã GH:</strong> @Model.MaGH</p>
            <p><strong><i class="fa-solid fa-id-badge"></i> Tên GH:</strong> @Model.TenGH</p>
            <p><strong><i class="fa-solid fa-id-badge"></i>Mô tả:</strong> @Model.MoTaGH</p>
            <p><strong><i class="fa-solid fa-id-badge"></i>Ngày tạo:</strong> @Model.NgayTao</p>
            <p><strong><i class="fa-solid fa-phone"></i> Điện thoại:</strong> @Model.DienThoaiGH</p>
            <p><strong><i class="fa-solid fa-envelope"></i> Email:</strong> @Model.EmailGH</p>
            <p><strong><i class="fa-solid fa-location-dot"></i> Địa chỉ:</strong> @Model.DiaChiGH</p>
        </div>
    </div>

   <div class="mt-3">
        <a asp-action="Edit" asp-route-maGH="@Model.MaGH" class="btn btn-warning">
            <i class="fa-solid fa-pen-to-square"></i> Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>


