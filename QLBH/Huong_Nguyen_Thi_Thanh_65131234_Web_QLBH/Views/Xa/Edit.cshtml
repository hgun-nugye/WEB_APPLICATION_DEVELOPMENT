@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.Xa
@{
    ViewBag.Title = "Sửa Xã";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<h2 class="text-warning mb-3">
    <i class="fa-solid fa-pen-to-square"></i> Sửa Thông Tin Xã
</h2>

<form asp-action="Edit" method="post" class="border p-4 rounded shadow-sm bg-light">
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-hashtag"></i> Mã Xã</label>
        <input asp-for="MaXa" class="form-control" readonly />
    </div>
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-id-badge"></i> Tên Xã</label>
        <input asp-for="TenXa" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-hashtag"></i> Mã Tỉnh</label>
        <input asp-for="MaTinh" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning text-white">
        <i class="fa-solid fa-save"></i> Cập nhật
    </button>
    <a asp-action="Xa_Admin" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Quay lại
    </a>
</form>
