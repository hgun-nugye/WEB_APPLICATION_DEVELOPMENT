@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.CTBH

@{
    ViewBag.Title = "Xóa Chi tiết bán hàng";
}

<h2 class="mb-3 text-danger">
    <i class="fa-solid fa-trash"></i> Xóa Chi tiết bán hàng
</h2>

<div class="alert alert-warning">
    <i class="fa-solid fa-triangle-exclamation"></i>
    Bạn có chắc chắn muốn xóa chi tiết bán hàng <strong>@Model.MaSP</strong> của đơn <strong>@Model.MaDBH</strong> không?
</div>

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3">Mã đơn bán hàng:</dt>
        <dd class="col-sm-9">@Model.MaDBH</dd>

        <dt class="col-sm-3">Mã sản phẩm:</dt>
        <dd class="col-sm-9">@Model.MaSP</dd>

        <dt class="col-sm-3">Tên sản phẩm:</dt>
        <dd class="col-sm-9">@Model.TenSP</dd>

        <dt class="col-sm-3">Số lượng bán:</dt>
        <dd class="col-sm-9">@Model.SLB</dd>

        <dt class="col-sm-3">Đơn giá bán:</dt>
        <dd class="col-sm-9">@Model.DGB.ToString("N0")</dd>

    </dl>

    <form id="deleteForm" asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="MaDBH" />
        <input type="hidden" asp-for="MaSP" />
        <a href="@Url.Action("CTBH_Admin", "CTBH", new { maDBH = Model.MaDBH })" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Hủy
        </a>
        <button type="button" class="btn btn-danger" onclick="confirmDelete()">
            <i class="fa-solid fa-trash"></i> Xóa
        </button>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: 'Bạn có chắc chắn muốn xóa chi tiết bán hàng này?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm').submit();
                }
            });
        }
    </script>
}
