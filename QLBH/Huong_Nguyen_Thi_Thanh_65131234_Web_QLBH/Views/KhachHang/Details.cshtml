@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.KhachHang
@{
    ViewBag.Title = "Chi tiết Khách hàng";
}

<h2 class="text-info mb-3">
    <i class="fa-solid fa-eye"></i> Chi tiết Khách hàng
</h2>

<div class="card shadow-sm border-info">
    <div class="card-body">
        <p><strong><i class="fa-solid fa-hashtag"></i> Mã KH:</strong> @Model.MaKH</p>
        <p><strong><i class="fa-solid fa-id-badge"></i> Tên KH:</strong> @Model.TenKH</p>
        <p><strong><i class="fa-solid fa-phone"></i> Điện thoại:</strong> @Model.DienThoaiKH</p>
        <p><strong><i class="fa-solid fa-envelope"></i> Email:</strong> @Model.EmailKH</p>
        <p><strong><i class="fa-solid fa-location-dot"></i> Địa chỉ:</strong> @Model.DiaChiKH</p>
    </div>
</div>

<a asp-action="KhachHang_Admin" class="btn btn-secondary mt-3">
    <i class="fa-solid fa-arrow-left"></i> Quay lại
</a>
