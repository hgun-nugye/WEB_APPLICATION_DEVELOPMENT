@model IEnumerable<Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.KhachHang>

@{
    ViewBag.Title = "Quản lý Khách hàng";
}

<div class=" container">
    <h2 class="mb-3 text-primary">
        <i class="fa-solid fa-truck"></i> Danh sách Khách hàng
    </h2>

    <p>
        <a href="@Url.Action("Create", "KhachHang")" class="btn btn-success">
            <i class="fa-solid fa-circle-plus"></i> Thêm Khách hàng
        </a>
    </p>

    <table class="table table-bordered table-hover align-middle text-center shadow-sm">
        <thead class="table-primary">
            <tr>
                <th><i class="fa-solid fa-hashtag"></i> Mã KH</th>
                <th><i class="fa-solid fa-id-badge"></i> Tên KH</th>
                <th><i class="fa-solid fa-phone"></i> Điện thoại</th>
                <th><i class="fa-solid fa-envelope"></i> Email</th>
                <th><i class="fa-solid fa-location-dot"></i> Địa chỉ</th>
                <th><i class="fa-solid fa-gear"></i> Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaKH</td>
                    <td>@item.TenKH</td>
                    <td>@item.DienThoaiKH</td>
                    <td>@item.EmailKH</td>
                    <td>@item.DiaChiKH</td>
                    <td class="justify-content-between">
                        <a class="btn btn-info btn-sm text-white" href="@Url.Action("Details", "KhachHang", new { id = item.MaKH })">
                            <i class="fa-solid fa-eye"></i> Chi tiết
                        </a>
                        <a class="btn btn-warning btn-sm text-white" href="@Url.Action("Edit", "KhachHang", new { id = item.MaKH })">
                            <i class="fa-solid fa-pen-to-square"></i> Sửa
                        </a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "KhachHang", new { id = item.MaKH })">
                            <i class="fa-solid fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    h2 i {
        margin-right: 8px;
    }

    .btn i {
        margin-right: 5px;
    }

    .table th {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>
