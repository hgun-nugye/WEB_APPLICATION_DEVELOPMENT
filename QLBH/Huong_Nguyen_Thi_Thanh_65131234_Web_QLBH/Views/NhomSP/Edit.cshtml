@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.NhomSP
@{
    ViewBag.Title = "Sửa Nhóm sản phẩm";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<h2 class="text-warning mb-3">
    <i class="fa-solid fa-pen-to-square"></i> Sửa Thông Tin Nhóm sản phẩm
</h2>

<form asp-action="Edit" method="post" class="border p-4 rounded shadow-sm bg-light">
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-hashtag"></i> Mã Nhóm sản phẩm</label>
        <input asp-for="MaNhom" class="form-control" readonly />
    </div>
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-id-badge"></i> Tên Nhóm sản phẩm</label>
        <input asp-for="TenNhom" class="form-control" />
    </div>
   
    <button type="submit" class="btn btn-warning text-white">
        <i class="fa-solid fa-save"></i> Cập nhật
    </button>
    <a asp-action="NhomSP_Admin" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Quay lại
    </a>
</form>
