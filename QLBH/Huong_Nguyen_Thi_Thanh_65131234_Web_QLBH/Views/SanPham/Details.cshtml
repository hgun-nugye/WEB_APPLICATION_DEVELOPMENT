@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.SanPham

@{
    ViewBag.Title = "Chi tiết Sản phẩm";
}

<h2 class="text-info mb-3">
    <i class="fa-solid fa-eye"></i> Chi tiết Sản phẩm
</h2>

<div class="card shadow-sm border-info">
    <div class="card-body">
        <p><strong><i class="fa-solid fa-hashtag"></i> Mã Sản phẩm:</strong> @Model.MaSP</p>
        <p><strong><i class="fa-solid fa-id-badge"></i> Tên Sản phẩm:</strong> @Model.TenSP</p>
        <p><strong><i class="fa-solid fa-money-bill"></i> Đơn giá:</strong> @string.Format("{0:N0} đ", Model.DonGia)</p>
        <p><strong><i class="fa-solid fa-align-left"></i> Mô tả:</strong> @Model.MoTaSP</p>
        <p><strong><i class="fa-solid fa-layer-group"></i> Loại sản phẩm:</strong> @Model.LoaiSP?.TenLSP</p>
        <p><strong><i class="fa-solid fa-store"></i> Gian hàng:</strong> @Model.GianHang?.TenGH</p>

        @if (!string.IsNullOrEmpty(Model.AnhMH))
        {
            <div class="mt-3">
                <strong><i class="fa-solid fa-image"></i> Ảnh minh họa:</strong><br />
                <a href="@Model.AnhMH" target="_blank">
                    <img src="@Model.AnhMH"
                         alt="Ảnh sản phẩm"
                         style="max-width: 100%; height: auto; border-radius: 8px; border: 1px solid #ccc; margin-top: 10px;" />
                </a>
            </div>
        }

    </div>
</div>

<a asp-action="SanPham_Admin" class="btn btn-secondary mt-3">
    <i class="fa-solid fa-arrow-left"></i> Quay lại
</a>
