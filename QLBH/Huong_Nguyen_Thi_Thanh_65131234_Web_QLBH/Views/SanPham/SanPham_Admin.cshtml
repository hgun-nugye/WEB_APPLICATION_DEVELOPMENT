@model IEnumerable<Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.SanPham>

@{
    ViewBag.Title = "Quản lý Loại sản phẩm";
}
<div class="container">
    <h2 class="mb-3 text-primary">
        <i class="fa-solid fa-truck"></i> Danh sách Loại sản phẩm
    </h2>

    <p>
        <a href="@Url.Action("Create", "SanPham")" class="btn btn-success">
            <i class="fa-solid fa-circle-plus"></i> Thêm Loại sản phẩm
        </a>
    </p>

    <table class="table table-bordered table-hover align-middle text-center shadow-sm">
        <thead class="table-primary">
            <tr>
                <th class="w-25"><i class="fa-solid fa-hashtag"></i> Mã Loại sản phẩm</th>
                <th class="w-25"><i class="fa-solid fa-id-badge"></i> Tên Loại sản phẩm</th>
                <th class="w-25"><i class="fa-solid fa-hashtag"></i> Mã Nhóm sản phẩm</th>

                <th class="w-50"><i class="fa-solid fa-gear "></i> Hành động</th>
            </tr>
        </thead>
        <tbody class="text-start">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaSP</td>
                    <td>@item.TenSP</td>
                    <td>@item.DonGia</td>

                    <td class="flex justify-content-between text-center">
                        <a class="btn btn-info btn-sm text-white" href="@Url.Action("Details", "SanPham", new { id = item.MaLoai })">
                            <i class="fa-solid fa-eye"></i> Chi tiết
                        </a>
                        <a class="btn btn-warning btn-sm text-white" href="@Url.Action("Edit", "SanPham", new { id = item.MaLoai})">
                            <i class="fa-solid fa-pen-to-square"></i> Sửa
                        </a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "SanPham", new { id = item.MaLoai})">
                            <i class="fa-solid fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    h2 i {
        margin-right: 8px;
    }

    .btn i {
        margin-right: 5px;
    }

    .table th {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s;
    }
</style>
