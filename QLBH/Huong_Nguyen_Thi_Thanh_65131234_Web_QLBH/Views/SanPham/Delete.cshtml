@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.SanPham

@{
    ViewBag.Title = "Xóa Sản phẩm";
}

<div class=" container">
    <h2 class="text-danger mb-3">
        <i class="fa-solid fa-trash"></i> Xóa Sản phẩm
    </h2>

    <div class="alert alert-warning shadow-sm">
        <i class="fa-solid fa-triangle-exclamation"></i>
        Bạn có chắc muốn xóa sản phẩm <strong>@Model.TenSP</strong> không?
    </div>

    <div class="card p-3 shadow-sm mb-3">
        <p><strong>Mã Sản phẩm:</strong> @Model.MaSP</p>
        <p><strong>Tên Sản phẩm:</strong> @Model.TenSP</p>
        <p><strong>Đơn giá:</strong> @string.Format("{0:N0} đ", Model.DonGia)</p>
        <p><strong>Mô tả:</strong> @Model.MoTaSP</p>
        <p><strong>Loại sản phẩm:</strong> @Model.LoaiSP?.TenLSP</p>
        <p><strong>Gian hàng:</strong> @Model.GianHang?.TenGH</p>

        @* Hiển thị ảnh minh họa nếu có *@
        @if (!string.IsNullOrEmpty(Model.AnhMH))
        {
            <div class="mt-3">
                <strong>Ảnh minh họa:</strong><br />
                <img src="@Model.AnhMH" alt="Ảnh sản phẩm" style="max-width: 200px; border-radius: 8px; border: 1px solid #ccc;" />
            </div>
        }
    </div>

    <form id="deleteForm" asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaSP" />

        <button type="button" class="btn btn-danger" onclick="confirmDelete()">
            <i class="fa-solid fa-trash-can"></i> Xóa
        </button>
        <a asp-action="SanPham_Admin" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </form>

</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: 'Bạn có chắc chắn muốn xóa sản phẩm này?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm').submit();
                }
            });
        }
    </script>
}
