@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.LoaiSP
@{
    ViewBag.Title = "Thêm Loại sản phẩm";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="container">
    <h2 class="text-success mb-3">
        <i class="fa-solid fa-circle-plus"></i> Thêm Loại sản phẩm
    </h2>

    <form asp-action="Create" method="post" class="border p-4 rounded shadow-sm bg-light">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label><i class="fa-solid fa-id-badge"></i> Tên Loại</label>
            <input asp-for="TenLSP" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label><i class="fa-solid fa-layer-group"></i> Nhóm sản phẩm</label>
            <select asp-for="MaNhom" asp-items="ViewBag.MaNhomList" class="form-control">
                <option value="">-- Chọn nhóm sản phẩm --</option>
            </select>
            <span asp-validation-for="MaNhom" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-success">
            <i class="fa-solid fa-save"></i> Lưu
        </button>
        <a asp-action="LoaiSP_Admin" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </form>

</div>