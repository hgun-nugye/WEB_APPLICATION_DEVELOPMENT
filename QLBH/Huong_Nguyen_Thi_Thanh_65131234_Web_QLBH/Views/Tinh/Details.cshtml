@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.Tinh
@{
    ViewBag.Title = "Chi tiết Tỉnh";
}

<div class=" container">
    <h2 class="text-info mb-3">
        <i class="fa-solid fa-eye"></i> Chi tiết Tỉnh
    </h2>

    <div class="card shadow-sm border-info">
        <div class="card-body">
            <p><strong><i class="fa-solid fa-hashtag"></i> Mã Tỉnh:</strong> @Model.MaTinh</p>
            <p><strong><i class="fa-solid fa-id-badge"></i> Tên Tỉnh:</strong> @Model.TenTinh</p>
        </div>
    </div>

   <div class="mt-3">
        <a asp-action="Edit" asp-route-maTinh="@Model.MaTinh" class="btn btn-warning">
            <i class="fa-solid fa-pen-to-square"></i> Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
   </div>
</div>
