@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.NhaCC
@{
    ViewBag.Title = "Sửa Nhà Cung Cấp";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<h2 class="text-warning mb-3">
    <i class="fa-solid fa-pen-to-square"></i> Sửa Thông Tin Nhà Cung Cấp
</h2>

<form asp-action="Edit" method="post" class="border p-4 rounded shadow-sm bg-light">
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-hashtag"></i> Mã NCC</label>
        <input asp-for="MaNCC" class="form-control" readonly />
    </div>
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-id-badge"></i> Tên NCC</label>
        <input asp-for="TenNCC" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-phone"></i> Điện thoại</label>
        <input asp-for="DienThoaiNCC" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-envelope"></i> Email</label>
        <input asp-for="EmailNCC" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label><i class="fa-solid fa-location-dot"></i> Địa chỉ</label>
        <input asp-for="DiaChiNCC" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning text-white">
        <i class="fa-solid fa-save"></i> Cập nhật
    </button>
    <a asp-action="NhaCC_Admin" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Quay lại
    </a>
</form>
