@model Huong_Nguyen_Thi_Thanh_65131234_Web_QLBH.Models.NhaCC
@{
    ViewBag.Title = "Chi tiết Nhà Cung Cấp";
}

<div class="container">
    <h2 class="text-info mb-3">
        <i class="fa-solid fa-eye"></i> Chi tiết Nhà Cung Cấp
    </h2>

    <div class="card shadow-sm border-info">
        <div class="card-body">
            <p><strong><i class="fa-solid fa-hashtag"></i> Mã NCC:</strong> @Model.MaNCC</p>
            <p><strong><i class="fa-solid fa-id-badge"></i> Tên NCC:</strong> @Model.TenNCC</p>
            <p><strong><i class="fa-solid fa-phone"></i> Điện thoại:</strong> @Model.DienThoaiNCC</p>
            <p><strong><i class="fa-solid fa-envelope"></i> Email:</strong> @Model.EmailNCC</p>
            <p><strong><i class="fa-solid fa-location-dot"></i> Địa chỉ:</strong> @Model.DiaChiNCC</p>
        </div>
    </div>

   <div class=" mt-3">
        <a asp-action="Edit" asp-route-maNCC="@Model.MaNCC" class="btn btn-warning">
            <i class="fa-solid fa-pen-to-square"></i> Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
   </div>
</div>
